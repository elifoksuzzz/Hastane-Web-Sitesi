@{
    ViewBag.Title = "BolumEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using UyumsoftHastaneWS.Models


<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Bölüm Ekleme Sayfası
                </div>
                <div class="block-controls">
                    <a href="/Bolumlerimiz/Index">Geri Dön</a>

                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <form action="/Bolumlerimiz/BolumEkle" method="post" role="form">

                        <div class="form-group">
                            <label for="Input for adi"> Adı</label>
                            <input type="text" class="form-control" placeholder="Bölüm adını buraya giriniz" name="adi">
                        </div>
                        <div class="form-group">
                            <label for="Input for adi"> Hizmetleri</label>
                            <input type="text" class="form-control" placeholder="Bölümün hizmetini giriniz" name="hizmetleri">
                        </div>

                        <br />
                        <button type="submit" class="btn btn-success"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Bolum Ekle</font></font></button>
                    </form>
                </div>
            </div>


        </div>
    </div>
</div>






