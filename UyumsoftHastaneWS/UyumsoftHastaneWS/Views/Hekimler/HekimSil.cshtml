@{
    ViewBag.Title = "HekimSil";
}
@using UyumsoftHastaneWS.Models
@model Hekimler

<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Hekim Silme Sayfası
                </div>
                <div class="block-controls">
                    <a href="/Hekimler/Index">Geri Dön</a>
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                   
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <form action="/Hekimler/HekimSil/" method="post">
                        <input type="hidden" name="hekim_id" value="@Model.hekim_id" />
                        <label>@Model.adi isimli hekim silinsin mi?</label>
                        <input type="submit" class="btn btn-danger" name="name" value="Evet" />
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

